<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@android:color/holo_blue_light</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@android:color/holo_blue_dark</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:windowBackground">@color/app_background</item>
    </style>

    <style name="AppThemeNoActionBar" parent="AppTheme">
        <item name="colorPrimaryDark">@android:color/holo_blue_dark</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <!-- Navigation list item - generic -->
    <style name="NavigationListItem">
        <item name="android:paddingLeft">@dimen/nav_list_item_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/nav_list_item_padding_horizontal</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Navigation list header -->
    <style name="NavigationListItem.Header">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColor">@android:color/holo_blue_dark</item>
        <item name="android:clickable">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NavigationListButton">
        <item name="android:minHeight">@dimen/nav_list_item_height</item>
        <item name="android:paddingLeft">@dimen/nav_list_item_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/nav_list_item_padding_horizontal</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/text_navigation_item</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
    </style>

</resources>
